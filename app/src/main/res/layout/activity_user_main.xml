<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Base.Theme.AnakSehat"
    tools:context=".user.UserMainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/userFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/userBotNav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/userBotNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/botnav_bg"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/color_bottomnav_icon"
        app:itemTextColor="@drawable/color_bottomnav_icon"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:menu="@menu/user_botnav"
        android:layout_alignParentBottom="true" />
</RelativeLayout>