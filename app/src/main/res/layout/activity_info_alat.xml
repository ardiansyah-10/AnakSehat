<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg4"
    tools:context=".info.InfoAlatActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/main_white"
            app:icon="@drawable/ic_back"
            app:iconSize="36dp"
            app:rippleColor="@color/ripple_blue"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Alat"
            android:fontFamily="@font/fig_700"
            android:textSize="28sp"
            android:textColor="@color/main_blue"
            android:layout_centerInParent="true"
            android:background="@drawable/title_bg"
            android:paddingHorizontal="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/fig_500"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="20dp"
        android:text="@string/infoAlat"
        android:textSize="22sp"
        android:textColor="@color/main_blk"
        android:justificationMode="inter_word"
        android:background="@drawable/title_bg"
        android:paddingVertical="10dp"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="251dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-56dp"
        android:src="@drawable/decor" />

</RelativeLayout>